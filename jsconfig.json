{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "public/*": ["../public/*"],
      "components/*": ["components/*"],
      "containers/*": ["containers/*"],
      "layouts/*": ["layouts/*"],
      "utils/*": ["utils/*"],
      "data/*": ["data/*"],
    },
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true, 
  },  
  "exclude": [
    "node_modules",
    "public",
  ],
  "include": [
    "./src/",
    "next.config.js"
  ]
}